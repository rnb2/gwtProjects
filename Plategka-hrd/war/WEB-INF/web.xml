<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  <servlet>
    <servlet-name>constantServlet</servlet-name>
    <servlet-class>com.rnb.plategka.server.ConstantServiceBean</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>constantServlet</servlet-name>
    <url-pattern>/plategka_hrd/constantService</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>paymentsServlet</servlet-name>
    <servlet-class>com.rnb.plategka.server.PaymentsServiceBean</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>paymentsServlet</servlet-name>
    <url-pattern>/plategka_hrd/paymentsService</url-pattern>
  </servlet-mapping>  
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>Plategka_hrd.html</welcome-file>
  </welcome-file-list>

</web-app>
